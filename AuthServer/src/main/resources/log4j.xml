<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" monitorInterval="30">
    <properties>
        <Property name="pattern">[%-5p][%d{yyyy-MM-dd HH:mm:ss}][%c{1}:%M:%L]: %msg%n%throwable</Property>
    </properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{${pattern}}{Bright}"/>
            <ThresholdFilter level="ALL"/>
        </Console>

        <DailyRollingFile name="auth" filename="logs/auth.log" filepattern="logs/auth.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="info"/>
        </DailyRollingFile>

        <DailyyRollingFile name="loginHistory" filename="logs/login_history.log" filepattern="logs/login_history.log.%i" append="true" >
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}]: %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="info"/>
        </DailyyRollingFile>

        <DailyRollingFile name="debug" filename="logs/debug.log" filepattern="logs/debug.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="debug"/>
        </DailyRollingFile>


    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="org.l2j.authserver">
            <AppenderRef ref="auth"/>
        </Logger>
        <Logger name="com.zaxxer.hikari" level="info">
            <AppenderRef ref="auth"/>
            <AppenderRef ref="debug"/>
        </Logger>
        <Logger name="loginHistory" level="info">
            <AppenderRef ref="loginHistory"/>
        </Logger>
        <Logger name="MySQL" level="error">
            <AppenderRef ref="debug"/>
        </Logger>
    </Loggers>
</Configuration>