<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/events.xsd">
    <event name="World Olympiad" class="org.l2j.gameserver.engine.olympiad.OlympiadEngine">
        <variables>
            <variable name="start-date" value="2020-06-22"/>
            <variable name="force-start-date" value="false"/>
        </variables>

        <scheduler>

            <schedule name="start-match" dayOfWeek="1-6" hour="22" minute="00">
                <event name="onStartMatch"/>
            </schedule>

            <schedule name="stop-match" dayOfWeek="1-6" hour="23" minute="00">
                <event name="onStopMatch"/>
            </schedule>

            <schedule name="new-season" dayOfWeek="1" hour="12" minute="00">
                <event name="onNewSeason"/>
            </schedule>

            <conditionalSchedule>
                <run name="start-match" if="BETWEEN">
                    <name>start-match</name>
                    <name>stop-match</name>
                </run>
            </conditionalSchedule>
        </scheduler>
    </event>
</list>